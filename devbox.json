{
  "$schema": "https://raw.githubusercontent.com/jetify-com/devbox/0.15.0/.schema/devbox.schema.json",
  "packages": [
    "github:dagger/nix/31da04c4a71703bd4c66be5769a46aa3c276e4ef#packages.x86_64-linux.dagger",
    "github:dagger/nix/126d68cb0752beec6be3975209dad29c05169cfd#packages.x86_64-linux.container-use",
    "uv@0.7.19",
    "k9s@0.50.6",
    "gh@2.74",
    "jq@1.7.1",
    "k3s@1.33.1+k3s1"
  ],
  "shell": {
    "init_hook": [
      "uv sync --project repermon --all-extras",
      "source .venv/bin/activate",
      "eval \"$(dagger completion bash)\"",
      "pre-commit install",
      "alias pch='pre-commit run --all-files'"
    ]
  }
}
